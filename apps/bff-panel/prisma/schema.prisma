datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model BacklogItem {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  status         String
  topic          String
  postType       String
  targetAudience String
  mainMessage    String?
  objective      String?
  sourceInsights String?
  structure      String?
  visualPrompts  String?
  visualMock     String?
  notes          String?
  plannedDate    DateTime?
}
